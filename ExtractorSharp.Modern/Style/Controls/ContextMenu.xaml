<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="App.ContextMenu" 
           BasedOn="{StaticResource MahApps.Styles.ContextMenu}"
           TargetType="ContextMenu">
        <Setter Property="Width" Value="200"></Setter>
        <Setter Property="Background" Value="White"></Setter>
        <Setter Property="BorderBrush" Value="#84848484"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="3" Opacity="0.5" Color="#FF858484" Direction="300" ShadowDepth="1"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>